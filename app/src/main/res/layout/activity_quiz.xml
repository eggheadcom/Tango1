<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity">


    <TextView
        android:id="@+id/tv1_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="@string/tv_title_quiz"
        />

    <com.beardedhen.androidbootstrap.BootstrapProgressBarGroup
        android:id="@+id/prgress_grp_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:roundedCorners="true"
        app:bootstrapBrand="warning"
        app:bootstrapMaxProgress="20"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:id="@+id/prgress_quiz"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            app:bootstrapBrand="warning"
            app:roundedCorners="true"
            app:striped="true"
            app:bootstrapProgress="1"
            />
    </com.beardedhen.androidbootstrap.BootstrapProgressBarGroup>


    <TextView
        android:id="@+id/tv_ques_count_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="right"
        android:text="@string/tv_ques_count_test"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="24sp"
                android:text="@string/tv_question_ques"
                />
            <TextView
                android:id="@+id/tv_question_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            >

            <RadioGroup
                android:id="@+id/rbgroup_quiz"
                >
                <RadioButton
                    android:id="@+id/rb_select1_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="aaaaa"/>
                <RadioButton
                    android:id="@+id/rb_select2_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="aaaaa"/>
                <RadioButton
                    android:id="@+id/rb_select3_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="aaaaa"/>
                <RadioButton
                    android:id="@+id/rb_select4_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="aaaaa"/>
            </RadioGroup>

        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/tv_debug_quiz"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_quit_quiz"
            android:layout_marginRight="6dp"
            style="@style/my_button_2"
            android:text="@string/btn_quit_ques"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_check_next_quiz"
            android:layout_marginRight="6dp"
            style="@style/my_button_2"
            android:enabled="false"
            app:bootstrapText="@string/btn_check_ques"
            />


    </LinearLayout>

</LinearLayout>